<%= form_with(model: @entity, url: group_entities_path(@group)) do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this entity from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.hidden_field :group_id, value: @group.id %>

  <div class="flex flex-col items-center">
    <div class="w-full max-w-md">
      <label class="block text-black mb-2" for="group_name">Transaction Name:</label>
      <%= form.text_field :name, class: "border border-black p-2 mb-4 w-full", placeholder: "Transaction Name", id: "group_name" %>

      <label class="block text-black mb-2" for="group_icon">Amount:</label>
      <%= form.number_field :amount, class: "border border-black p-2 mb-4 w-full", placeholder: "Amount", id: "group_icon" %>

      <label class="block text-black mb-2" for="group_icon">Available Categories:</label>
      <%= form.collection_select :group_id, current_user.groups, :id, :name, class: "border border-black p-2 mb-4", id: "group_icon" %>
    
    </div>

    <%= form.submit "Create Transaction", class: "bg-green-500 text-white px-4 py-2 rounded-lg mt-4 hover:bg-green-600 cursor-pointer" %>
  </div>
<% end %>
